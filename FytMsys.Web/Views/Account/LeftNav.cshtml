<style>
    .msum {
        display: inline-block;
        width: 18px;
        line-height: 17px;
        height: 18px;
        background-color: #ff0000;
        color: #ffffff;
        border-radius: 50%;
        text-align: center;
        font-size: 12px;
        text-decoration: none;
    }
</style>
<script type="text/javascript">
    $.post("/account/GetMessCount", null, function (res) {
        if (res.Data > 0) {
            $(".msum").show().html(res.Data);
        }
    }, "json");
</script>