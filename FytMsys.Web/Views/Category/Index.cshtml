@using Domain.Entity
@model Domain.Entity.tb_Column
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cModel = ViewBag.cmodel as tb_Column;
}
<div class="hr"></div>
<div class="help-sew" style="border-top: none">
    <div class="w1200">
        <div class="h-search clearfix">
            <form  action="/category/search" method="GET">
                <input class="col-md-10 col-xs-8" type="search" id="key" name="key" placeholder="在下面输入您问题关键词" /><button class="col-md-2 col-xs-3 btn">搜索</button>
            </form>
        </div>
    </div>
</div>
<div class="w1200 clearfix">
    <div class="col-md-3 col-xs-12 help-lnav" >
        <h2><span>@cModel.Title</span></h2>
        <ul>
            @{
                var list = ViewBag.navList as List<tb_Column>;
                if (list != null && list.Count > 0)
                {
                    foreach (var item in list)
                    {
                        <span class="col-md-12 col-xs-6" style="padding: 0">
                            <li @Html.Raw(item.ID == Model.ID ? "class=cur" : "")><a href="/category/@cModel.EnTitle/@item.EnTitle">@item.Title<i class="icon-angle-right"></i></a></li>
                        </span>
                    }
                }
            }
        </ul>
    </div><!-- end -->
    <div class="col-md-9 col-xs-12 help-rtxt">
        <h2>@Model.Title</h2>
        <div class="help-ntext clearfix">
            @{
                if (!string.IsNullOrEmpty(Model.Content))
                {
                    @Html.Raw(Model.Content)
                }
                else
                {
                    <p style="text-align: center">无内容</p>
                }
            }
            
        </div>
    </div>
</div>

