@using FytMsys.Common
@{
    Layout = "../shared/_Layout.cshtml";
    var isRe = FytRequest.GetQueryInt("isRe",0);
}
<input type="hidden" id="isRe" value="@isRe" />
<!-- table star -->
<div class="row col-lg-12">
    <div class="wrapper animated fadeInUp">
        <div class="ibox">
            <div class="ibox-title">
                <h5>所有项目</h5>
                <div class="ibox-tools rboor pr20">
                    @{
                        if (isRe == 1)
                        {
                            <a href="javascript:void(0)" onclick=" javascript: tb.reductionRecyc(0) " class="btn btn-primary btn-xs p310"><i class="im-spinner12"></i> 还原</a>
                            <a href="javascript:void(0)" onclick=" javascript: tb.deletes(0) " class="btn btn-primary btn-xs p310"><i class="im-remove4"></i> 彻底删除</a>
                            <a href="javascript:void(0)" onclick=" javascript: tb.emptyRecyc() " class="btn btn-primary btn-xs p310"><i class="im-remove4"></i> 清空回收站</a>
                        }
                        else
                        {
                            <a href="ArticleModfiy/0" class="btn btn-primary btn-xs p310"><i class="im-pencil2"></i> 添加新博文</a>
                            <a href="javascript:void(0)" onclick="javascript: tb.delRecyc(0)" class="btn btn-primary btn-xs p310"><i class="im-remove4"></i> 删除</a>
                        }
                    }
                    <a href="javascript:void(0)" class="btn btn-primary btn-xs p310" id="Modfiy"><i class="im-pencil2"></i> 编辑</a>
                    <button id="tb-refresh" class="btn btn-primary btn-xs p310"><i class="im-spinner10 fa-spin"></i> 刷新</button>
                </div>
            </div>

            <div class="ibox-content">
                <!-- search star -->
                <div class="form-horizontal clearfix">
                    <div class="col-lg-4 col-sm-4">
                        <div class="form-group">
                            <div class="col-lg-12 col-sm-12 input-group">
                                <input type="text" id="txtKey" placeholder="请输入关键字" value="" class="input-sm form-control">
                                <span class="input-group-btn">
                                    <button type="button" id="btnKey" class="btn btn-sm btn-primary"> 搜索</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- search end -->
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="tables" class="table table-striped table-bordered table-hover dataTables-example dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="tn" style="width: 60px !important"><input id="checkall" name="" type="checkbox" value=""></th>
                                <th>标题</th>
                                <th>博主</th>
                                <th>作者</th>
                                <th>审核状态</th>
                                <th>阅读次数</th>
                                <th>编辑时间</th>
                            </tr>
                        </thead>
                        <tbody id="trows"></tbody>
                        <script id="tlist" type="text/x-jquery-tmpl">
                            <tr>
                                <td class="tn"><input class="check" type="checkbox" name="checkbox_name" value="${ID}"></td>
                                <td>${Title}</td>
                                <td>${blogTitle}</td>
                                <td>${Author}</td>
                                <td>${Audit}</td>
                                <td>${Hits}</td>
                                <td>${EditDate}</td>
                            </tr>
                        </script>
                    </table>
                    <!-- page -->
                    <div class="bottom">
                        <div class="dataTables_info" id="tables_info" role="status" aria-live="polite"></div>
                        <div class="dataTables_length" id="tables_length">
                            <label>显示 <select id="sel_page" class="form-control input-sm"><option value="10" selected="selected">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> 项结果</label>
                        </div>
                        <div class="dataTables_paginate paging_full_numbers" id="tables_paginate"><ul class="pagination"></ul></div>
                        <div class="clear"></div>
                    </div>
                    <!-- page -->
                </div>
            </div>

        </div>
    </div>
</div>
<!-- table end -->
@section scripts
{
    <script type="text/javascript" src="/assets/js/table/blog/article.js"></script>
}
