@{
    Layout = "../shared/_Layout.cshtml";
}
<!-- table star -->
<div class="row col-lg-12">
    <div class="wrapper animated fadeInUp">
        <div class="ibox">
            <div class="ibox-title">
                <h5>所有评论</h5>
                <div class="ibox-tools rboor pr20">
                    <a href="javascript:void(0)" class="btn btn-primary btn-xs p310" onclick="tb.ModfiyStatus(2,0)"><i class="im-checkmark3"></i> 审核通过</a>
                    <a href="javascript:void(0)" class="btn btn-primary btn-xs p310" onclick="tb.ModfiyStatus(3,0)"><i class="im-strikethrough3"></i> 审核不通过</a>
                    <a href="javascript:void(0)" class="btn btn-primary btn-xs p310" id="Modfiy"><i class="im-eye7"></i> 查看</a>
                    <a href="javascript:void(0)" onclick="javascript:tb.deletes(0)" class="btn btn-primary btn-xs p310"><i class="im-remove4"></i> 删除选中</a>
                    <button id="tb-refresh" href="javascript:void(0)" class="btn btn-primary btn-xs p310"><i class="im-spinner10 fa-spin"></i> 刷新</button>
                </div>
            </div>

            <div class="ibox-content">
                <!-- search star -->
                <div class="form-horizontal clearfix">
                    <div class="col-lg-4 col-sm-3 pl0">
                        <div class="form-group">
                            <div class="col-lg-8 col-sm-8">
                                <select id="selStatus" class="input-sm form-control input-s-sm inline">
                                    <option value="0">所有</option>
                                    <option value="1">未审核</option>
                                    <option value="2">审核通过</option>
                                    <option value="3">审核未通过</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-3 pl0">
                        <div class="form-group">
                            <label class="col-lg-3  col-sm-3 control-label">状态：</label>
                            <div class="col-lg-8 col-sm-8">
                                <select id="selOption" class="input-sm form-control input-s-sm inline">
                                    <option value="0"></option>
                                    <option value="1">文章</option>
                                    <option value="2">下载</option>
                                    <option value="3">图文</option>
                                    <option value="3">视频</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                        <div class="form-group">
                            <div class="col-lg-12 col-sm-12 input-group">
                                <input type="text" id="txtKey" placeholder="请输入关键字" value="" class="input-sm form-control">
                                <span class="input-group-btn">
                                    <button type="button" id="btnKey" class="btn btn-sm btn-primary"> 搜索</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- search end -->
                <!-- begin -->
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="tables" class="table table-striped table-bordered table-hover dataTables-example dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="tn" style="width: 60px !important"><input id="checkall" name="" type="checkbox" value=""></th>
                                <th width="30%">评论内容</th>
                                <th>用户昵称</th>
                                <th>用户IP</th>
                                <th>发表时间</th>
                                <th>状态</th>
                                <th>是否回复</th>
                            </tr>
                        </thead>
                        <tbody id="trows"></tbody>
                        <script id="tlist" type="text/x-jquery-tmpl">
                            <tr>
                                <td class="tn"><input class="check" type="checkbox" name="checkbox_name" value="${ID}"></td>
                                <td>${Content}</td>
                                <td>${LoginName}</td>
                                <td>${UserIP}</td>
                                <td>${AddDate}</td>
                                <td>{{html tb.resStatus(Status)}}</td>
                                <td>${RepContent=="" ? "未回复" : "已回复"}</td>
                            </tr>
                        </script>
                    </table>
                    <!-- page -->
                    <div class="bottom">
                        <div class="dataTables_info" id="tables_info" role="status" aria-live="polite"></div>
                        <div class="dataTables_length" id="tables_length">
                            <label>显示 <select id="sel_page" class="form-control input-sm"><option value="10" selected="selected">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> 项结果</label>
                        </div>
                        <div class="dataTables_paginate paging_full_numbers" id="tables_paginate"><ul class="pagination"></ul></div>
                        <div class="clear"></div>
                    </div>
                    <!-- page -->
                </div>
                <!-- end -->
            </div>

        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="/assets/js/table/fytcomment.js"></script>
}
